<!-- views/fruits/show.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= fruits.name %>
    </title> <!-- Dynamic title based on fruit name -->
</head>

<body>
    <!-- views/fruits/show.ejs -->

    <body>
        <a href="/fruits/">Back to Fruits</a>
        <h1>
            <%= fruits.name %>
        </h1>
        <!-- Conditional rendering based on fruit's readiness -->
        <% if (fruits.isReadyToEat) { %>
            <p>This fruit is ready to eat!</p>
            <% } else { %>
                <p>This fruit is not ready to eat!</p>
                <% } %>
                    <!-- new delete button -->
            <form action="/fruits/<%=fruits._id%>?_method=DELETE" method="POST">
                 <button type="submit">Delete <%= fruits.name %></button>
            </form>
            <a href="/fruits/<%= fruits._id %>/edit">Edit <%= fruits.name %></a>

    </body>

</html>