<body>
    <!-- update the header -->
    <h1>Edit <%= fruits.name %></h1>
    <form action="/fruits/<%=fruits._id%>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= fruits.name %>" />
      
        <label for="isReadyToEat">Ready to Eat?</label>
        <input type="checkbox" name="isReadyToEat" <% if (fruits.isReadyToEat) { %>checked<% } %> >      
        <button type="submit">Update Fruit</button>
      </form>
    <a href="/fruits">Back to Fruits</a>
  </body>